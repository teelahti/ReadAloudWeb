@using System.Web.Optimization
<!DOCTYPE html>
<html lang="fi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Opetellaan lukemaan ja kirjoittamaan</title>
    @Styles.Render("~/content/css")
    @if (!Request.IsLocal 
        && System.Configuration.ConfigurationManager.AppSettings.AllKeys.Contains("GoogleAnalyticsKey"))
    {
    <script type="text/javascript">
        var _gaq = _gaq || [];
            
        _gaq.push(['_setAccount', '@System.Configuration.ConfigurationManager.AppSettings["GoogleAnalyticsKey"]']);
        _gaq.push(['_trackPageview']);

        (function() {
            var ga = document.createElement('script');
            ga.type = 'text/javascript';
            ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(ga, s);
        })();
    </script>
    }
</head>

    <body>
        @RenderBody()
    </body>
    @RenderSection("Scripts", false)
</html>
